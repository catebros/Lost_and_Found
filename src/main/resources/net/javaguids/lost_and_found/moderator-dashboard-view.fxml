<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.javaguids.lost_and_found.controllers.ModeratorDashboardController"
            prefHeight="850" prefWidth="1200">

    <top>
        <VBox spacing="10" style="-fx-background-color: #FFC107; -fx-padding: 20;">
            <Label text="Moderator Dashboard" textFill="white">
                <font>
                    <Font size="24" name="System Bold"/>
                </font>
            </Label>
            <HBox spacing="30">
                <Label fx:id="totalItemsLabel" text="Total Items: 0" textFill="white">
                    <font><Font size="14"/></font>
                </Label>
                <Label fx:id="totalChatsLabel" text="Total Conversations: 0" textFill="white">
                    <font><Font size="14"/></font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 20;" prefWidth="150">
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" prefWidth="130" style="-fx-background-color: #FFC107; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Items">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Item Moderation">
                            <font><Font size="16" name="System Bold"/></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <TableView fx:id="itemsTable" prefHeight="400" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="Title" prefWidth="130"/>
                            <TableColumn text="Category" prefWidth="100"/>
                            <TableColumn text="Location" prefWidth="130"/>
                            <TableColumn text="Type" prefWidth="70"/>
                            <TableColumn text="Posted By" prefWidth="120"/>
                            <TableColumn text="Status" prefWidth="90"/>
                            <TableColumn text="Actions" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Messages">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="All Conversations">
                            <font><Font size="16" name="System Bold"/></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <TableView fx:id="messagesTable" prefHeight="400" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="Conversation" prefWidth="250"/>
                            <TableColumn text="Last Message" prefWidth="300"/>
                            <TableColumn text="Timestamp" prefWidth="150"/>
                            <TableColumn text="Actions" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>

</BorderPane>
