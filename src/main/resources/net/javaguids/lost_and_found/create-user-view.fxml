<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.javaguids.lost_and_found.controllers.CreateUserController"
            prefHeight="850" prefWidth="800">

    <top>
        <VBox spacing="10" style="-fx-background-color: #FF9800; -fx-padding: 20;">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button text="â†" onAction="#handleGoBack" prefWidth="40" prefHeight="40"
                        style="-fx-font-size: 18; -fx-padding: 5; -fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white;"/>
                <Label text="Create New User" textFill="white">
                    <font>
                        <Font size="20" name="System Bold"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 30;">
            <VBox spacing="8">
                <Label text="Username:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Enter username"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Email:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="emailField" promptText="Enter email"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Password:" style="-fx-font-weight: bold;"/>
                <PasswordField fx:id="passwordField" promptText="Enter password"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Role:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="roleCombo" prefWidth="200"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button text="Create User" onAction="#handleCreate" prefWidth="120" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
