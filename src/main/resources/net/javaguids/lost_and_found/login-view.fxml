<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="net.javaguids.lost_and_found.controllers.LoginController"
      alignment="CENTER" prefHeight="850" prefWidth="800">
<VBox alignment="TOP_LEFT" spacing="20" maxWidth="600">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Lost and Found System">
        <font>
            <Font size="24" name="System Bold"/>
        </font>
    </Label>

    <Label text="Login">
        <font>
            <Font size="18"/>
        </font>
    </Label>

    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Login" onAction="#handleLogin" prefWidth="140" styleClass="primary-button"/>
        <Button text="Register" onAction="#handleRegister" prefWidth="140"/>
    </HBox>

</VBox>
</HBox>
